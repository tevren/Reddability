<%= form_tag sessions_path do %>
  <div class="control-group">
      <%= label_tag :user %>
      <div class="controls">
      <%= text_field_tag :user %>
      </div>
  </div>

  <div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
      <%= password_field_tag :password %>
      </div>
  </div>


<div class="form-actions">
    <%= submit_tag "Login", :class => 'btn btn-primary' %>
  </div>
<% end %>